---
export interface Props {
  videoId?: string;
}

const { videoId } = Astro.props;
---

<section class="w-full h-full">
  {
    videoId && (
      <iframe
        class="absolute w-full h-full"
        src={'https://www.youtube.com/embed/' + videoId + '?&controls=0&autoplay=1&loop=1&mute=1&playsinline=1'}
        allow="modestbranding;"
      />
    )
  }
</section>
